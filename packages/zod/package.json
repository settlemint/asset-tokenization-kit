{
  "name": "@atk/zod",
  "type": "module",
  "scripts": {
    "typecheck": "tsgo --noEmit",
    "lint": "eslint . --fix --max-warnings 0 --cache --cache-location .eslintcache",
    "format": "prettier --experimental-cli --write .",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test:coverage"
  },
  "exports": {
    "./package.json": "./package.json",
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "devDependencies": {
    "@tools/typescript-config": "workspace:*",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  },
  "dependencies": {
    "zod": "4.1.11"
  }
}
