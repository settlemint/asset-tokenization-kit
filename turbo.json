{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "THE_GRAPH_PORT_LOCAL_DEPLOY",
    "THE_GRAPH_PORT_LOCAL_QUERY",
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": ["compile", "codegen", "lint", "test"]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "build"]
    },
    "ci:gha:main": {
      "dependsOn": ["ci:gha", "test:integration", "artifacts", "publish"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"],
      "outputs": [
        "src/lib/contracts.ts",
        "src/lib/types/**",
        "src/generated/**",
        "generated/**",
        "*.graphql.ts"
      ]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"],
      "outputs": [
        "out/**",
        "out-genesis/**",
        "portal/**",
        "subgraph-output.txt"
      ]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {
      "outputs": ["node_modules/**", ".next/**"]
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {
      "outputs": ["README.md", "docs/**"]
    },
    "test": {
      "outputs": ["coverage/**", ".coverage/**"]
    },
    "artifacts": {
      "dependsOn": ["compile", "@atk/artifacts#artifacts"],
      "outputs": [
        "kit/artifacts/portal/**",
        "kit/artifacts/genesis/**",
        "kit/artifacts/postgres/**",
        "kit/artifacts/docker-compose/**"
      ]
    },
    "@atk/artifacts#artifacts": {
      "dependsOn": ["^compile"],
      "outputs": [
        "portal/**",
        "genesis/**",
        "postgres/**",
        "docker-compose/**"
      ]
    },
    "@atk/artifacts#artifacts:contracts": {
      "dependsOn": ["contracts#compile"],
      "outputs": [
        "portal/**",
        "genesis/**"
      ]
    },
    "@atk/artifacts#artifacts:charts": {
      "dependsOn": ["@atk/artifacts#artifacts:contracts"],
      "outputs": []
    },
    "@atk/artifacts#artifacts:docker-compose": {
      "dependsOn": ["subgraph#compile"],
      "outputs": ["docker-compose/**"],
      "inputs": ["../subgraph/subgraph-output.txt"]
    },
    "@atk/artifacts#artifacts:database": {
      "dependsOn": ["dapp#db:export"],
      "outputs": ["postgres/**"],
      "inputs": ["../dapp/database-export.sql"]
    },
    "test:integration": {
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:export": {
      "outputs": ["database-export.sql"]
    },
    "db:push": {
      "cache": false
    }
  }
}