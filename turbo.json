{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "THE_GRAPH_PORT_LOCAL_DEPLOY",
    "THE_GRAPH_PORT_LOCAL_QUERY",
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": ["compile", "codegen", "lint", "test"]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "build", "//#dev:up"]
    },
    "ci:gha:main": {
      "dependsOn": ["ci:gha", "publish"]
    },
    "ci:gha:nightly": {
      "dependsOn": ["ci:gha:main", "test:integration"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {},
    "format": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {},
    "test": {},
    "artifacts": {},
    "test:integration": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:export": {},
    "db:push": {
      "cache": false
    },
    "//#dev:connect": {
      "outputs": ["**/.env", "**/.env.local"],
      "dependsOn": ["//#dev:up"]
    },
    "//#dev:up": {
      "cache": false,
      "dependsOn": [
        "contracts#artifacts",
        "dapp#artifacts",
        "subgraph#artifacts"
      ]
    }
  }
}
