{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI",
    "BUILD_ID",
    "GITHUB_SHA",
    "GIT_COMMIT"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": ["compile", "codegen", "lint", "test", "typecheck"]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "test:integration", "build"]
    },
    "ci:gha:main": {
      "dependsOn": ["publish", "ci:gha"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {},
    "format": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {},
    "test": {},
    "artifacts": {},
    "test:integration": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["codegen"]
    }
  }
}
