{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"codegen": {
			"dependsOn": ["codegen:settlemint", "codegen:gql-tada", "codegen:graph"],
			"outputs": ["*.d.ts", "src/lib/settlemint/**", "generated/**"]
		},
		"codegen:settlemint": {
			"outputs": ["*-env.d.ts", "*-schema.graphql", "src/lib/settlemint/**"]
		},
		"codegen:gql-tada": {
			"outputs": ["*-cache.d.ts"]
		},
		"codegen:graph": {
			"dependsOn": ["compile:hardhat"],
			"outputs": ["generated/**"]
		},
		"dependencies": {
			"outputs": ["dependencies/**"]
		},
		"format": {
			"dependsOn": ["format:biome", "format:forge"]
		},
		"format:biome": {
			"cache": false
		},
		"format:forge": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["lint:biome", "lint:solhint", "lint:eslint"]
		},
		"lint:biome": {
			"dependsOn": ["codegen"]
		},
		"lint:solhint": {
			"dependsOn": ["codegen"]
		},
		"lint:eslint": {
			"dependsOn": ["codegen"]
		},
		"compile": {
			"dependsOn": ["compile:hardhat", "compile:forge"]
		},
		"compile:hardhat": {
			"dependsOn": ["dependencies"],
			"outputs": ["artifacts/**", "cache/**"]
		},
		"compile:forge": {
			"dependsOn": ["dependencies"],
			"outputs": ["out/**", "cache_forge/**"]
		},
		"addresses": {
			"outputs": ["src/lib/contracts.ts"]
		},
		"build": {
			"dependsOn": ["codegen", "addresses"],
			"outputs": [".next/**", "!.next/cache/**", "build/**"]
		}
	}
}
