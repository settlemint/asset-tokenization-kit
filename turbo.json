{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI",
    "BUILD_ID",
    "GITHUB_SHA",
    "GIT_COMMIT",
    "CLAUDECODE"
  ],
  "remoteCache": {
    "enabled": true,
    "signature": false,
    "preflight": false,
    "timeout": 30,
    "uploadTimeout": 60
  },
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": [
        "compile",
        "codegen",
        "lint",
        "test",
        "typecheck",
        "build",
        "artifacts"
      ]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "test:integration"]
    },
    "ci:gha:main": {
      "dependsOn": ["publish", "publish:docker", "ci:gha"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package", "artifacts"]
    },
    "publish:docker": {
      "cache": false,
      "dependsOn": ["artifacts"]
    },
    "dependencies": {},
    "format": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {},
    "test": {},
    "artifacts": {},
    "test:integration": {
      "dependsOn": ["build"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["codegen"]
    }
  }
}
