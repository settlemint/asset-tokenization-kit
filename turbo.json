{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "THE_GRAPH_PORT_LOCAL_DEPLOY",
    "THE_GRAPH_PORT_LOCAL_QUERY",
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": ["compile", "codegen", "lint", "test"]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "build", "artifacts"]
    },
    "ci:gha:main": {
      "dependsOn": ["ci:gha", "publish"]
    },
    "ci:gha:nightly": {
      "dependsOn": ["ci:gha:main", "test:integration"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"],
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"],
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"],
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "artifacts": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "test:integration": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:export": {
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    },
    "db:push": {
      "cache": false
    },
    "//#dev:connect": {
      "outputs": ["**/.env", "**/.env.local"],
      "inputs": ["$TURBO_DEFAULT$", "!**/.generated/**", "!**/.generated"]
    }
  }
}
