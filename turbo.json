{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI",
    "BUILD_ID",
    "GITHUB_SHA",
    "GIT_COMMIT",
    "CLAUDECODE"
  ],
  "remoteCache": {
    "enabled": true,
    "signature": false,
    "preflight": false,
    "timeout": 30,
    "uploadTimeout": 60
  },
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format", "test"]
    },
    "ci:base": {
      "dependsOn": [
        "compile",
        "codegen",
        "lint",
        "typecheck",
        "build",
        "artifacts"
      ]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "test:ci"]
    },
    "ci:gha:main": {
      "dependsOn": ["publish", "publish:docker", "ci:gha"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "BUILD_ID",
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "settlemint:connect:local": {
      "cache": false
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package", "artifacts"]
    },
    "publish:docker": {
      "cache": false,
      "dependsOn": ["artifacts"]
    },
    "dependencies": {},
    "format": {},
    "lint": {
      "dependsOn": ["//#verify-translations"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {},
    "test": {},
    "artifacts": {},
    "test:integration": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["codegen"]
    },
    "//#verify-translations": {
      "inputs": ["kit/dapp/locales/**/*"]
    },
    "test:ci": {
      "dependsOn": ["^test:ci"],
      "outputs": [
        "coverage/**",
        "coverage.json",
        "coverage/coverage-summary.json",
        "coverage/coverage-final.json",
        ".nyc_output/**"
      ],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,mjs,cjs}",
        "contracts/**/*.sol",
        "test/**/*.{ts,tsx,js,jsx,mjs,cjs}",
        "tests/**/*.{ts,tsx,js,jsx,mjs,cjs}",
        "spec/**/*.{ts,tsx,js,jsx,mjs,cjs}",
        "**/*.test.{ts,tsx,js,jsx,mjs,cjs}",
        "**/*.spec.{ts,tsx,js,jsx,mjs,cjs}",
        "vitest.config.*",
        "jest.config.*",
        "foundry.toml",
        "hardhat.config.*",
        "!coverage/**",
        "!.nyc_output/**",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/build/**",
        "!**/.turbo/**"
      ],
      "env": ["NODE_ENV", "CI", "DOTENV_CONFIG_PATH", "TEST_*"],
      "passThroughEnv": ["FORCE_COLOR", "NO_COLOR"]
    }
  }
}
