{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "dangerouslyDisablePackageManagerCheck": true,
  "envMode": "loose",
  "tasks": {
    "connect": {
      "outputs": ["settlemint.config.mjs", ".env.local"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": ["out/**"]
    },
    "codegen": {
      "dependsOn": ["^codegen", "contracts#compile", "connect"],
      "outputs": ["generated/**", ".settlemint/**"]
    },
    "build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "build/**"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "translate": {
      "inputs": ["messages/**"]
    }
  }
}
