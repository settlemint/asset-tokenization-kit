{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "THE_GRAPH_PORT_LOCAL_DEPLOY",
    "THE_GRAPH_PORT_LOCAL_QUERY"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": ["compile", "codegen", "lint", "test", "build"]
    },
    "ci:gha": {
      "dependsOn": ["publish", "ci:base", "test:integration"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {},
    "format": {},
    "lint": {},
    "dev": {
      "dependsOn": ["dapp#codegen"],
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {},
    "test": {},
    "artifacts": {},
    "test:integration": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
