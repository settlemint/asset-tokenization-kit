{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build", "dependencies"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "cache_forge/**", "cache/**", "out/**", "artifacts/**"]
    },
    "lint": {
      "dependsOn": ["codegen", "^lint", "//#format:biome"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#publish-npm": {
      "cache": false
    },
    "publish-docker": {
      "dependsOn": ["codegen", "^publish-docker"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^deploy"],
      "cache": false
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "cache": false
    },
    "//#format:biome": {
      "cache": false
    },
    "//#lint:biome": {
      "cache": false
    },
    "test": {
      "dependsOn": ["dependencies", "^test"]
    },
    "test:deploy": {
      "dependsOn": ["genesis", "^test:deploy"]
    },
    "dependencies": {
      "dependsOn": ["^dependencies"],
      "outputs": ["dependencies/**"]
    },
    "genesis": {
      "dependsOn": ["dependencies", "^genesis"],
      "outputs": ["genesis-output.json"]
    }
  }
}
