{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "THE_GRAPH_PORT_LOCAL_DEPLOY",
    "THE_GRAPH_PORT_LOCAL_QUERY",
    "FORCE_COLOR",
    "NO_COLOR",
    "TERM",
    "CI"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["ci:base", "format"]
    },
    "ci:base": {
      "dependsOn": ["compile", "codegen", "lint", "test"]
    },
    "ci:gha": {
      "dependsOn": ["ci:base", "build"]
    },
    "ci:gha:main": {
      "dependsOn": ["ci:gha", "test:integration", "publish"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"],
      "outputs": [
        "src/lib/contracts.ts",
        "src/lib/types/**",
        "src/generated/**",
        "generated/**",
        "*.graphql.ts"
      ]
    },
    "compile": {
      "dependsOn": ["dependencies", "codegen", "^compile"],
      "outputs": [
        "out/**",
        "out-genesis/**",
        "portal/**",
        "genesis/**",
        "subgraph-output.txt",
        ".env.subgraph"
      ]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {
      "outputs": ["node_modules/**", ".next/**"]
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {
      "outputs": ["README.md", "docs/**"]
    },
    "test": {
      "outputs": ["coverage/**", ".coverage/**"]
    },
    "test:integration": {
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:export": {
      "outputs": ["database-export.sql", "../../tools/docker/postgres/atk.sql"]
    },
    "db:push": {
      "cache": false
    }
  }
}