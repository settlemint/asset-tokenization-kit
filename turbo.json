{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build", "dependencies"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "cache_forge/**", "cache/**", "out/**", "artifacts/**"]
    },
    "lint": {
      "dependsOn": ["codegen", "^lint"]
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "//#publish-npm": {
      "cache": false
    },
    "publish-docker": {
      "dependsOn": ["codegen", "^publish-docker"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^deploy"],
      "cache": false
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "outputs": ["*.-cache.d.ts", "*.-env.d.ts", "*.-schema.graphql", "src/lib/settlemint/**", "build/**"]
    },
    "subgraph#codegen": {
      "dependsOn": ["contracts#build"],
      "outputs": ["build/**"]
    },
    "//#format:biome": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "//#lint:biome": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test": {
      "dependsOn": ["dependencies", "^test"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test:deploy": {
      "dependsOn": ["genesis", "^test:deploy"]
    },
    "subgraph#test:deploy": {
      "dependsOn": ["contracts#test:deploy"]
    },
    "contracts#test:deploy": {
      "cache": false
    },
    "dependencies": {
      "dependsOn": ["^dependencies"],
      "inputs": ["$TURBO_DEFAULT$", "foundry.toml"],
      "outputs": ["dependencies/**"]
    },
    "genesis": {
      "dependsOn": ["dependencies", "^genesis"],
      "outputs": ["genesis-output.json"]
    },
    "contracts#deploy:remote": {
      "dependsOn": ["contracts#dependencies", "contracts#build"],
      "cache": false,
      "persistent": true
    }
  }
}
