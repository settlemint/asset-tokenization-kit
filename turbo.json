{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "ci": {
      "dependsOn": ["compile", "codegen", "lint", "test", "build"]
    },
    "ci:gha": {
      "dependsOn": ["publish", "ci"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "compile": {
      "dependsOn": ["dependencies"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package", "docker:up", "^docker:up"]
    },
    "dependencies": {},
    "format": {},
    "lint": {
      "dependsOn": ["//#version"]
    },
    "dev": {
      "dependsOn": ["dapp#codegen", "docker:up"],
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {
      "cache": false
    },
    "test": {},
    "docker:up": { "cache": false }
  }
}
