{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "THE_GRAPH_PORT_LOCAL_DEPLOY",
    "THE_GRAPH_PORT_LOCAL_QUERY"
  ],
  "tasks": {
    "ci": {
      "dependsOn": ["compile", "codegen", "lint", "test", "typecheck", "build"]
    },
    "ci:gha": {
      "dependsOn": ["publish", "ci", "test:integration"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies", "docs"]
    },
    "compile": {
      "dependsOn": ["dependencies"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["//#version"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package"]
    },
    "dependencies": {},
    "format": {},
    "lint": {
      "dependsOn": ["//#version"]
    },
    "dev": {
      "dependsOn": ["dapp#codegen"],
      "cache": false,
      "persistent": true
    },
    "helm": {
      "cache": false
    },
    "docs": {
      "cache": false
    },
    "test": {},
    "artifacts": {},
    "typecheck": {
      "dependsOn": ["dependencies", "codegen", "subgraph#build"]
    },
    "test:integration": {}
  }
}
