{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"envMode": "loose",
	"tasks": {
		"codegen": {
			"dependsOn": ["^compile"],
			"outputs": ["*.d.ts", "src/lib/settlemint/**", "generated/**"]
		},
		"dependencies": {
			"outputs": ["dependencies/**"]
		},
		"lint": {
			"dependsOn": ["codegen"]
		},
		"compile": {
			"dependsOn": ["dependencies"],
			"outputs": ["out/**", "artifacts/**", "cache_forge/**", "cache/**"]
		},
		"build": {
			"dependsOn": ["codegen"],
			"outputs": [".next/**", "!.next/cache/**", "build/**"]
		}
	}
}
