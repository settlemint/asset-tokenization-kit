{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "ci": {
      "dependsOn": ["format", "compile", "codegen", "lint", "build"]
    },
    "ci:gha": {
      "dependsOn": ["publish", "ci"]
    },
    "//#version": {
      "cache": false,
      "passThroughEnv": [
        "GITHUB_REF_SLUG",
        "GITHUB_REF_NAME",
        "GITHUB_SHA_SHORT"
      ]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "dependsOn": ["dependencies"]
    },
    "compile": {
      "dependsOn": ["dependencies"]
    },
    "compile:forge": {
      "dependsOn": ["dependencies"]
    },
    "compile:hardhat": {
      "dependsOn": ["dependencies"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["build", "//#version"]
    },
    "dependencies": {},
    "dev": {
      "dependsOn": ["dapp#codegen:settlemint"],
      "cache": false,
      "persistent": true
    },
    "format": {},
    "lint": {
      "dependsOn": ["//#version"]
    }
  }
}
