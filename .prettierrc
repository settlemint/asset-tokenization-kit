{
  "semi": true,
  "trailingComma": "es5",
  "quoteProps": "as-needed",
  "arrowParens": "always",
  "proseWrap": "always",
  "overrides": [
    {
      "files": "*.mdc",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": "*.mdx",
      "options": {
        "proseWrap": "preserve"
      }
    }
  ],
  "plugins": ["@prettier/plugin-oxc"]
}
