{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "name": "SDK: Connect",
      "program": "../../packages/sdk/src/cli/cli.ts",
      "args": ["connect"],
      "cwd": "${workspaceFolder}/apps/asset-tokenization",
      "watchMode": true,
      "strictEnv": false,
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "name": "SDK: Update Custom Deployment",
      "program": "../../packages/sdk/src/cli/cli.ts",
      "args": [
        "custom-deployment",
        "update",
        "--image-path",
        "ghcr.io/settlemint/asset-tokenization-kit:main",
        "--port",
        "3000"
      ],
      "cwd": "${workspaceFolder}/apps/asset-tokenization",
      "watchMode": true,
      "strictEnv": false,
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tanstack: debug server-side",
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/kit/dapp",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true
    },
    {
      "name": "Tanstack: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Execute open Test file",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "TEST_DAPP_PORT": "3000"
      }
    }
  ]
}
