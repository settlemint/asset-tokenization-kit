{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "ignorePatterns": ["src/components/ui/*"],
  "rules": {
    "@typescript-eslint/no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
