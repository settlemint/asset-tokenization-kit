{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/routes/**/*.{ts,tsx}",
    "src/router.tsx",
    "src/orpc/routes/router.ts",
    "src/providers/index.tsx"
  ],
  "project": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.test.{ts,tsx}",
    "!src/**/*.spec.{ts,tsx}",
    "!src/test/**/*"
  ],
  "ignore": [
    "src/routeTree.gen.ts",
    "src/lib/interface-ids.ts",
    "src/lib/db/schemas/auth.ts",
    "**/*.d.ts",
    "node_modules/**",
    "coverage/**",
    "dist/**",
    ".next/**",
    ".tanstack/**",
    "src/components/ui/**"
  ],
  "ignoreDependencies": [
    "@types/bun",
    "babel-plugin-react-compiler",
    "contracts",
    "dotenv",
    "happy-dom",
    "languine",
    "minimatch",
    "vite-bundle-analyzer",
    "vite-plugin-terminal",
    "@vitest/coverage-v8",
    "@vitest/ui",
    "vitest",
    "@testing-library/user-event",
    "@types/pg",
    "@types/react-dom",
    "eslint-plugin-react-perf",
    "react-dom",
    "@tanstack/router-cli",
    "@tanstack/router-devtools",
    "@settlemint/sdk-blockscout",
    "@settlemint/sdk-ipfs",
    "@settlemint/sdk-minio",
    "@radix-ui/*"
  ],
  "ignoreBinaries": [
    "languine",
    "tsc",
    "gql-tada",
    "settlemint",
    "prettier",
    "eslint",
    "drizzle-kit",
    "better-auth",
    "shadcn",
    "dotenv",
    "tsx",
    "tsr"
  ],
  "vite": {
    "config": "vite.config.ts"
  },
  "typescript": {
    "config": "tsconfig.json"
  },
  "eslint": {
    "config": "eslint.config.mjs"
  },
  "vitest": {
    "config": ["vitest.config.ts", "vitest.config.integration.ts"],
    "entry": ["**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}", "test/**/*.{ts,tsx}"]
  },
  "drizzle": {
    "config": "drizzle.config.ts",
    "entry": ["src/lib/db/**/*.ts", "drizzle/**/*.sql"]
  },
  "rules": {
    "files": "error",
    "dependencies": "error",
    "unlisted": "error",
    "binaries": "error",
    "unresolved": "error",
    "exports": "off",
    "types": "off",
    "nsExports": "off",
    "classMembers": "error",
    "duplicates": "error",
    "enumMembers": "error"
  }
}
