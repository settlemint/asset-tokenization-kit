{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["codegen:settlemint", "codegen:gql-tada"]
    },
    "codegen:settlemint": {
      "inputs": [".env.local", ".env"],
      "outputs": [
        "*-env-*.d.ts",
        "*-schema.graphql",
        "*-schema-*.graphql",
        "src/lib/settlemint/**"
      ],
      "dependsOn": ["contracts#docker:up", "db:migrate"]
    },
    "codegen:gql-tada": {
      "outputs": ["*-cache.d.ts"],
      "dependsOn": ["contracts#docker:up", "db:migrate"]
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:generate": {
      "outputs": ["drizzle/**"],
      "inputs": ["src/lib/db/**"]
    },
    "db:migrate": {
      "dependsOn": ["db:generate", "contracts#docker:up"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["db:migrate"],
      "cache": false
    }
  }
}
