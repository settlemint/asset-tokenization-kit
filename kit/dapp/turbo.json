{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["codegen:settlemint", "codegen:gql-tada"]
    },
    "codegen:settlemint": {
      "inputs": [".env.local", ".env"],
      "outputs": [
        "*-env-*.d.ts",
        "*-schema.graphql",
        "*-schema-*.graphql",
        "src/lib/settlemint/**"
      ]
    },
    "codegen:gql-tada": {
      "outputs": ["*-cache.d.ts"]
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:auth:generate": {
      "inputs": ["src/lib/auth/auth.ts"],
      "outputs": ["src/lib/db/schema-auth.ts"]
    },
    "db:export": {
      "inputs": ["src/lib/db/**"],
      "dependsOn": ["db:auth:generate"]
    },
    "artifacts": {
      "dependsOn": ["db:export"]
    }
  }
}
