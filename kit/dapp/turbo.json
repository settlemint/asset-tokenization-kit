{
  "extends": ["//"],
  "tasks": {
    "codegen:settlemint": {
      "cache": false
    },
    "codegen": {
      "dependsOn": ["codegen:settlemint", "contracts#compile"],
      "outputs": ["src/lib/interface-ids.ts"],
      "inputs": ["tools/generate-interface-ids.ts"]
    },
    "build": {
      "dependsOn": ["codegen"],
      "outputs": [".output/**", "dist/**"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx,css}",
        "public/**",
        "tsconfig.json",
        "vite.config.*",
        "package.json"
      ]
    },
    "publish": {
      "dependsOn": ["build"]
    },
    "artifacts": {},
    "test": {
      "dependsOn": ["codegen", "build"],
      "outputs": []
    },
    "test:integration": {
      "dependsOn": ["codegen", "build", "artifacts"]
    },
    "lint": {
      "dependsOn": ["codegen"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        ".eslintrc*",
        "eslint.config.*",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [".eslintcache"]
    }
  }
}
