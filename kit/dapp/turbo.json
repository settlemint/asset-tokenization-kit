{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["codegen:settlemint", "codegen:gql-tada"]
    },
    "codegen:settlemint": {
      "dependsOn": ["//#setup:connect"],
      "inputs": [".env.local", ".env"],
      "outputs": [
        "*-env-*.d.ts",
        "*-schema.graphql",
        "*-schema-*.graphql",
        "src/lib/settlemint/**"
      ]
    },
    "codegen:gql-tada": {
      "outputs": ["*-cache.d.ts"]
    },
    "build": {
      "outputs": [".output/**"]
    },
    "publish": {
      "dependsOn": ["build"]
    },
    "db:export": {
      "inputs": ["src/lib/db/**"],
      "outputs": [".generated/database-export.sql"]
    },
    "artifacts": {
      "dependsOn": ["db:export"]
    },
    "test": {
      "outputs": ["coverage/**", "test-results/**"],
      "inputs": ["src/**/*.{ts,tsx}", "test/**/*.{ts,tsx}"]
    }
  }
}
