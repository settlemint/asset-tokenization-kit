{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["codegen:gql-tada"]
    },
    "codegen:settlemint": {
      "inputs": [".env.local", ".env", "../subgraph/schema.graphql"],
      "outputs": [
        "*-env-*.d.ts",
        "*-schema.graphql",
        "*-schema-*.graphql",
        "src/lib/settlemint/**"
      ]
    },
    "codegen:gql-tada": {
      "dependsOn": ["codegen:settlemint"],
      "outputs": ["*-cache.d.ts"]
    },
    "build": {
      "dependsOn": ["codegen:settlemint"],
      "outputs": [".output/**"]
    },
    "publish": {
      "dependsOn": ["build"]
    },
    "db:export": {
      "inputs": ["src/lib/db/**", "tools/export-database.ts"],
      "outputs": [".generated/database-export.sql"]
    },
    "artifacts": {
      "dependsOn": ["db:export"]
    },
    "test": {
      "dependsOn": ["codegen"]
    },
    "test:integration": {
      "dependsOn": ["codegen"]
    }
  }
}
