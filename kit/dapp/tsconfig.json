{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": false,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "@0no-co/graphqlsp",
        "trackFieldUsage": false,
        "schemas": []
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@schemas/*": [
        "./*.d.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}