{
  "extends": ["//"],
  "tasks": {
    "dependencies": {
      "outputs": ["**/Chart.lock", "**/charts/**/*.tgz"],
      "inputs": [
        "**/Chart.yaml",
        "**/values.yaml",
        "**/values-*.yaml",
        "tools/dependencies.ts"
      ]
    },
    "compile": {
      "outputs": ["dist/**"],
      "inputs": [
        "atk/**",
        "**/*.gotmpl",
        "**/values*.yaml",
        "**/Chart.yaml"
      ]
    },
    "package": {
      "cache": false,
      "dependsOn": ["package:push:harbor", "//#version"]
    },
    "package:harbor": {
      "cache": false,
      "dependsOn": ["dependencies"]
    },
    "package:pack": {
      "cache": false,
      "dependsOn": ["package:harbor"]
    },
    "package:push:ghcr": {
      "cache": false,
      "dependsOn": ["package:pack"]
    },
    "package:push:harbor": {
      "cache": false,
      "dependsOn": ["package:pack"]
    },
    "helm": {
      "dependsOn": ["helm:check-context", "dependencies", "helm:secrets", "^codegen", "codegen", "compile", "^compile","helm:subgraph"],
      "cache": false
    },
    "helm:check-context": {
      "cache": false
    },
    "helm:subgraph": {
      "cache": false,
      "dependsOn": ["subgraph#compile"]
    },
    "helm:secrets": {
      "outputs": ["**/values-orbstack.yaml"],
      "inputs": ["**/values-orbstack.1p.yaml"]
    },
    "artifacts": {
      "dependsOn": ["contracts#artifacts:genesis", "contracts#artifacts:abi"]
    },
    "docs": {
      "inputs": ["**/values.yaml", "**/Chart.yaml", "README.md.gotmpl"]
    }
  }
}
