{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "redis values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "default": ""
        },
        "imagePullSecrets": {
          "type": "array",
          "description": "Global Docker registry secret names as an array",
          "items": {}
        },
        "storageClass": {
          "description": "Global StorageClass for Persistent Volume(s)",
          "type": "string",
          "default": ""
        }
      },
      "description": "Global Docker image registry",
      "additionalProperties": false
    },
    "fullnameOverride": {
      "type": "string",
      "default": ""
    },
    "nameOverride": {
      "type": "string",
      "default": ""
    },
    "commonLabels": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "commonAnnotations": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string",
          "default": "docker.io"
        },
        "repository": {
          "description": "Redis image repository",
          "type": "string",
          "default": "redis"
        },
        "tag": {
          "description": "Redis image tag",
          "type": "string",
          "default": "8.2.2-alpine"
        },
        "pullPolicy": {
          "description": "Redis image pull policy",
          "type": "string",
          "default": "IfNotPresent"
        },
        "pullSecrets": {
          "type": "array",
          "items": {}
        }
      },
      "description": "Redis image configuration",
      "additionalProperties": false
    },
    "replicaCount": {
      "description": "Number of Redis replicas (should be 1 for development)",
      "type": "integer",
      "default": 1
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "ClusterIP"
        },
        "port": {
          "description": "Redis port",
          "type": "integer",
          "default": 6379
        },
        "annotations": {
          "type": "object",
          "properties": {},
          "description": "Service annotations",
          "additionalProperties": true
        },
        "labels": {
          "type": "object",
          "properties": {},
          "description": "Service labels",
          "additionalProperties": true
        }
      },
      "description": "Service configuration",
      "additionalProperties": false
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "default": "64Mi"
            },
            "cpu": {
              "description": "CPU request",
              "type": "string",
              "default": "40m"
            }
          },
          "description": "Memory request",
          "additionalProperties": false
        },
        "limits": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "default": "128Mi"
            },
            "cpu": {
              "description": "CPU limit",
              "type": "string",
              "default": "240m"
            }
          },
          "description": "Resource limits",
          "additionalProperties": false
        }
      },
      "description": "Resources configuration",
      "additionalProperties": false
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "storageClass": {
          "description": "Storage class for the PVC",
          "type": "string",
          "default": ""
        },
        "accessModes": {
          "type": "array",
          "description": "Access mode for the PVC",
          "items": {
            "type": "string",
            "default": "ReadWriteOnce"
          }
        },
        "size": {
          "description": "Size of the PVC",
          "type": "string",
          "default": "1Gi"
        },
        "annotations": {
          "type": "object",
          "properties": {},
          "description": "Annotations for the PVC",
          "additionalProperties": true
        }
      },
      "description": "Persistence configuration",
      "additionalProperties": false
    },
    "config": {
      "type": "object",
      "properties": {
        "maxmemory": {
          "type": "string",
          "default": "256mb"
        },
        "maxmemoryPolicy": {
          "description": "Memory eviction policy",
          "type": "string",
          "default": "allkeys-lru"
        },
        "save": {
          "description": "Save DB to disk (RDB persistence)",
          "type": "string",
          "default": ""
        },
        "appendonly": {
          "description": "Append only file (AOF persistence)",
          "type": "string",
          "default": "no"
        }
      },
      "description": "Redis configuration",
      "additionalProperties": {
        "type": "string"
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "password": {
          "description": "Redis password",
          "type": "string",
          "default": "atk"
        }
      },
      "description": "Authentication",
      "additionalProperties": false
    },
    "podAnnotations": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "podLabels": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "containerSecurityContext": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "livenessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "initialDelaySeconds": {
          "type": "integer",
          "default": 30
        },
        "periodSeconds": {
          "type": "integer",
          "default": 10
        },
        "timeoutSeconds": {
          "type": "integer",
          "default": 5
        },
        "successThreshold": {
          "type": "integer",
          "default": 1
        },
        "failureThreshold": {
          "type": "integer",
          "default": 3
        }
      },
      "description": "Liveness probe configuration",
      "additionalProperties": false
    },
    "readinessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "initialDelaySeconds": {
          "type": "integer",
          "default": 5
        },
        "periodSeconds": {
          "type": "integer",
          "default": 10
        },
        "timeoutSeconds": {
          "type": "integer",
          "default": 5
        },
        "successThreshold": {
          "type": "integer",
          "default": 1
        },
        "failureThreshold": {
          "type": "integer",
          "default": 3
        }
      },
      "description": "Readiness probe configuration",
      "additionalProperties": false
    },
    "nodeSelector": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "tolerations": {
      "type": "array",
      "items": {}
    },
    "affinity": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "allowedPodSelectors": {
          "type": "array",
          "items": {}
        },
        "allowedNamespaceSelectors": {
          "type": "array",
          "items": {}
        }
      },
      "description": "Network policy configuration",
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
