{
  "extends": ["//"],
  "tasks": {
    "dependencies": {
      "outputs": ["dependencies/**"],
      "inputs": ["soldeer.lock", "tools/dependencies.ts"]
    },
    "compile": {
      "dependsOn": ["compile:forge", "compile:hardhat"]
    },
    "compile:forge": {
      "outputs": [".generated/out/**", ".generated/cache_forge/**"],
      "inputs": [
        "contracts/**/*.sol",
        "test/**/*.sol",
        "dependencies/**/*.sol",
        "foundry.toml",
        "remappings.txt",
        "soldeer.lock"
      ]
    },
    "compile:hardhat": {
      "outputs": [".generated/artifacts/**", ".generated/cache/**"],
      "inputs": [
        "contracts/**/*.sol",
        "dependencies/**/*.sol",
        "hardhat.config.ts",
        "soldeer.lock"
      ]
    },
    "compile:typescript": {
      "outputs": [".tsbuildinfo"],
      "inputs": ["**/*.ts"]
    },
    "codegen": {
      "dependsOn": ["codegen:types"]
    },
    "codegen:types": {
      "dependsOn": ["compile:hardhat"],
      "outputs": ["scripts/hardhat/abi/**"],
      "inputs": [
        "contracts/**",
        ".generated/artifacts/**",
        "tools/codegen-types.ts"
      ]
    },
    "artifacts": {
      "dependsOn": ["artifacts:genesis", "artifacts:abi"]
    },
    "artifacts:genesis": {
      "outputs": [
        ".generated/genesis.json",
        ".generated/genesis-allocations.json"
      ],
      "inputs": [
        "contracts/**",
        ".generated/out/**",
        "tools/artifacts-genesis.ts"
      ]
    },
    "artifacts:abi": {
      "dependsOn": ["compile"],
      "outputs": [".generated/portal/**"],
      "inputs": ["contracts/**", ".generated/out/**", "tools/artifacts-abi.ts"]
    },
    "format": {
      "dependsOn": ["format:forge", "format:prettier"]
    },
    "format:forge": {},
    "format:prettier": {},
    "publish": {
      "cache": false,
      "dependsOn": ["package", "codegen"]
    },
    "test": {
      "dependsOn": ["compile:forge"]
    },
    "test:ci": {
      "dependsOn": ["compile:forge"]
    }
  }
}
