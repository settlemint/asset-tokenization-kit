{
  "extends": ["//"],
  "tasks": {
    "dependencies": {
      "outputs": ["dependencies/**"],
      "inputs": ["foundry.toml"]
    },
    "compile": {
      "dependsOn": ["compile:forge", "compile:hardhat"]
    },
    "compile:forge": {
      "dependsOn": ["dependencies"],
      "outputs": [".generated/out/**", ".generated/cache_forge/**"],
      "inputs": ["contracts/**/*.sol"]
    },
    "compile:hardhat": {
      "dependsOn": ["dependencies"],
      "outputs": [".generated/artifacts/**", ".generated/cache/**"],
      "inputs": ["contracts/**/*.sol"]
    },
    "codegen": {
      "dependsOn": ["codegen:types"]
    },
    "codegen:types": {
      "dependsOn": ["compile:hardhat"],
      "outputs": ["scripts/hardhat/abi/**"],
      "inputs": ["contracts/**"]
    },
    "artifacts": {
      "dependsOn": ["artifacts:genesis", "artifacts:abi"]
    },
    "artifacts:genesis": {
      "dependsOn": ["compile:forge"],
      "outputs": [
        ".generated/genesis-allocations.json",
        ".generated/genesis.json"
      ],
      "inputs": ["contracts/**/*.sol"]
    },
    "artifacts:abi": {
      "dependsOn": ["compile"],
      "outputs": [".generated/portal/*.json"],
      "inputs": ["contracts/**/*.sol"]
    },
    "format": {
      "dependsOn": ["format:forge", "format:prettier"]
    },
    "format:forge": {},
    "format:prettier": {},
    "publish": {
      "cache": false,
      "dependsOn": [
        "package",
        "codegen",
        "subgraph#codegen:interfaceid",
        "//#setup:dev"
      ]
    },
    "test": {
      "dependsOn": ["compile:forge"],
      "outputs": [],
      "inputs": ["**/*.sol", "test/**", "!.generated/**"]
    }
  }
}
