{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,

    "moduleResolution": "bundler",
    "module": "Preserve",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/server/*": ["./server/*"],
      "@/browser/*": ["./browser/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
