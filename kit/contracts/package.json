  "scripts": {
    "dependencies": "forge soldeer install",
    "lint": "solhint --config .solhint.json ./contracts/**/*.sol",
    "format": "forge fmt",
    "build": "forge build --sizes",
    "prebuild": "hardhat compile",
    "test": "forge test -vvv",
    "test:deploy": "hardhat ignition deploy --network localhost ignition/modules/main.ts",
    "genesis": "bash -ex genesis-output.sh",
    "deploy:remote": "settlemint scs hardhat deploy remote",
    "prod:deploy": "turbo deploy:remote"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-foundry": "1.1.3",
    "@nomicfoundation/hardhat-toolbox-viem": "3.0.0",
