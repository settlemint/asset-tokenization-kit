{
  "name": "contracts",
  "version": "1.0.0",
  "private": false,
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "scripts": {
    "docker:up": "docker compose -p atk up -d",
    "docker:down": "docker compose -p atk down",
    "docker:logs": "docker compose -p atk logs -f",
    "docker:restart": "docker compose -p atk restart",
    "docker:ps": "docker compose -p atk ps",
    "predocker:up": "yq eval '.services.graph-node.environment.SUBGRAPH = \"kit:'$(cat ../subgraph/subgraph-output.txt | tr -d '\\n')'\"' -i docker-compose.yml",
    "postdocker:up": "settlemint hasura track -a",
    "dependencies": "bun run tools/dependencies.ts",
    "compile:forge": "settlemint scs foundry build --sizes",
    "compile:hardhat": "settlemint scs hardhat build",
    "codegen:types": "bun run tools/codegen-types.ts",
    "codegen:genesis": "bun run tools/codegen-genesis.ts",
    "codegen:abi": "bun run tools/codegen-abi.ts",
    "lint": "solhint --config .solhint.json ./contracts/**/*.sol",
    "format:forge": "settlemint scs foundry format",
    "format:prettier": "prettier --write .",
    "publish": "settlemint scs hardhat script local --script scripts/hardhat/main.ts",
    "abi-output": "bash tools/abi-output.sh",
    "test": "settlemint scs foundry test -vvv",
    "deploy:remote": "settlemint scs hardhat deploy remote --deployment-id asset-tokenization",
    "deploy:local": "settlemint scs hardhat deploy local -m ignition/modules/main.ts --deployment-id asset-tokenization-local --reset",
    "deploy:local:onboarding": "settlemint scs hardhat deploy local -m ignition/modules/onboarding.ts --deployment-id asset-tokenization-local --reset",
    "deploy:local:test": "bun codegen:types && rm -Rf ignition/deployments/smart-protocol-local && settlemint scs hardhat script local --script scripts/hardhat/main.ts"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-foundry": "1.1.3",
    "@nomicfoundation/hardhat-toolbox-viem": "3.0.0",
    "@nomiclabs/hardhat-solhint": "4.0.1",
    "hardhat": "2.24.2",
    "solhint": "5.1.0"
  },
  "devDependencies": {},
  "peerDependencies": {},
  "overrides": {
    "elliptic": "6.6.1",
    "ws": "8.18.2"
  }
}
