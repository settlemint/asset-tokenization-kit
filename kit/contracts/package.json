{
  "name": "contracts",
  "version": "2.0.0",
  "private": false,
  "license": "FSL-1.1-MIT",
  "scripts": {
    "compile:typescript": "tsgo --noEmit",
    "dependencies": "bun run tools/dependencies.ts",
    "compile:forge": "settlemint scs foundry build",
    "compile:hardhat": "settlemint scs hardhat build",
    "codegen:types": "bun run tools/codegen-types.ts",
    "artifacts:genesis": "bun run tools/artifacts-genesis.ts",
    "artifacts:abi": "bun run tools/artifacts-abi.ts",
    "lint": "solhint --config .solhint.json --max-warnings 0 --noPoster './contracts/**/!(temp_)*.sol'",
    "postlint": "forge lint",
    "format:forge": "settlemint scs foundry format",
    "format:prettier": "prettier --write .",
    "clean:deployments": "rm -Rf ignition/deployments/atk-local",
    "publish": "bun run clean:deployments && settlemint scs hardhat script local --script scripts/hardhat/main.ts",
    "publish:docker": "bash tools/publish-docker.sh",
    "test": "settlemint scs foundry test",
    "test:ci": "mkdir -p coverage && settlemint scs foundry coverage --ir-minimum --skip \"s.sol\" --exclude-tests --report lcov --report-file coverage/lcov.info",
    "deploy:remote": "settlemint scs hardhat deploy remote --deployment-id asset-tokenization"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ignition": "0.15.13",
    "merkletreejs": "0.6.0",
    "viem": "2.38.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "1.2.0",
    "@nomicfoundation/hardhat-ignition-viem": "0.15.13",
    "@nomiclabs/hardhat-solhint": "4.1.0",
    "hardhat": "2.26.3",
    "solhint": "6.0.1",
    "ts-node": "10.9.2"
  },
  "peerDependencies": {}
}
