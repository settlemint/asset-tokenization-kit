		"name": "SettleMint",
		"email": "support@settlemint.com",
		"url": "https://settlemint.com"
	},
	"scripts": {
		"dependencies": "forge soldeer install && find dependencies -name .git -type d -exec rm -rf {} +",
		"lint:biome": "biome lint --write --unsafe .",
		"lint:solhint": "solhint --config .solhint.json ./contracts/**/*.sol",
		"format:biome": "biome format --write .",
		"format:forge": "forge fmt",
		"compile:forge": "forge build --sizes",
		"compile:hardhat": "hardhat compile",
		"test": "forge test -vvv",
		"genesis": "bash -e genesis-output.sh",
		"deploy:remote": "settlemint scs hardhat deploy remote",
		"deploy:local": "settlemint scs hardhat deploy local --reset"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-foundry": "1.1.3",
		"@nomicfoundation/hardhat-toolbox-viem": "3.0.0",
		"@nomiclabs/hardhat-solhint": "4.0.1",
		"hardhat": "2.22.18",
		"solhint": "5.0.5"
	},
	"devDependencies": {},
	"peerDependencies": {},
	"overrides": {
		"elliptic": "6.6.1",
		"ws": "8.18.0"
	}
}
