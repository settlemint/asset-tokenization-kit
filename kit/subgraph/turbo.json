{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "outputs": ["generated/**"],
      "inputs": ["subgraph.yaml", "schema.graphql"]
    },
    "codegen:interfaceid": {
      "dependsOn": ["contracts#compile:hardhat", "contracts#compile:forge"],
      "outputs": ["src/erc165/utils/interfaceids.ts"]
    },
    "build": {
      "dependsOn": ["codegen", "codegen:interfaceid"],
      "outputs": ["build/**"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
