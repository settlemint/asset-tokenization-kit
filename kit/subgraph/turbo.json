{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["codegen:graph", "codegen:interfaceid"]
    },
    "codegen:graph": {
      "outputs": ["generated/**"],
      "inputs": ["subgraph.yaml", "schema.graphql"]
    },
    "codegen:interfaceid": {
      "dependsOn": ["contracts#compile"],
      "outputs": ["src/erc165/utils/interfaceids.ts"],
      "inputs": ["**/*.sol", "!.generated/**"]
    },
    "codegen:gql-tada": {
      "dependsOn": ["publish"],
      "inputs": ["the-graph-schema.graphql"],
      "outputs": ["the-graph-env.d.ts", "the-graph-cache.d.ts"]
    },
    "compile": {
      "dependsOn": ["^compile", "codegen"],
      "outputs": [
        "build/**",
        ".generated/subgraph-hash.txt",
        ".generated/.env.subgraph"
      ],
      "inputs": ["subgraph.yaml", "schema.graphql"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package", "^publish", "codegen:interfaceid", "contracts#deploy:local"]
    },
    "test:integration": {
      "dependsOn": ["codegen:gql-tada"]
    },
    "translate": {},
    "artifacts": {
      "dependsOn": ["build", "compile", "translate"]
    }
  }
}
