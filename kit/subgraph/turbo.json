{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["^compile", "contracts#compile:hardhat"],
      "outputs": ["generated/**"],
      "inputs": ["subgraph.yaml", "schema.graphql", "src/**/*.ts"]
    },
    "codegen:interfaceid": {
      "dependsOn": ["contracts#compile"],
      "outputs": ["src/erc165/utils/interfaceids.ts"],
      "inputs": ["**/*.sol", "tools/interfaceid.ts"]
    },
    "compile": {
      "dependsOn": ["^compile", "codegen", "codegen:interfaceid"],
      "outputs": [
        "build/**",
        ".generated/subgraph-env",
        ".generated/subgraph-hash.txt"
      ],
      "inputs": ["subgraph.yaml", "schema.graphql", "src/**/*.ts"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["package", "^publish", "compile"]
    },
    "publish:test": {
      "cache": false,
      "dependsOn": ["package", "^publish"]
    },
    "test:integration": {
      "dependsOn": ["publish", "test"]
    },
    "test:ci": {
      "dependsOn": ["publish", "test"],
      "outputs": ["coverage/**", "coverage.json", ".nyc_output/**"]
    },
    "translate": {
      "inputs": ["src/**/*.ts"],
      "outputs": []
    },
    "artifacts": {
      "dependsOn": ["compile", "translate"]
    }
  }
}
