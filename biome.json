{
  "extends": ["ultracite"],
  "files": {
    "ignore": ["kit/subgraph/src/**"]
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off",
        "useNamingConvention": "off"
      },
      "nursery": {
        "noSecrets": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120
    }
  },
  "css": {
    "formatter": {
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 120
    }
  }
}
